<%- include('header') -%>
<body>
  <div class="box" id="heading">
    <h1><%= listTitle %></h1>
  </div>
  <div class="box">
    <% newItem.forEach(item => { %>
    <form action="/delete" method="post">
      <div class="item">
        <input
          type="checkbox"
          onchange="this.form.submit()"
          name="checkbox"
          value="<%=item._id%>"
        />
        <input type="hidden" name="listName" value="<%=listTitle%>" />
        <p><%=item.name%></p>
      </div>
    </form>
    <% }); %>

    <form class="item" action="/" method="post">
      <input
        type="text"
        name="newItem"
        id=""
        autofocus
        placeholder="New Item"
        autocomplete="off"
      />
      <button type="submit" name="listType" value="<%=listTitle%>">+</button>
    </form>
  </div>
</body>
<%- include('footer')-%>
